{
  "name": "wct",
  "version": "1.2.1",
  "description": "Git worktree workflow automation CLI",
  "module": "src/index.ts",
  "type": "module",
  "license": "MIT",
  "bin": {
    "wct": "src/index.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "test": "bun test",
    "test:coverage": "bun test --coverage --coverage-reporter=text --coverage-reporter=lcov",
    "lint": "bunx biome check",
    "format": "bunx biome check --write",
    "build": "bun build src/index.ts --compile --outfile dist/wct",
    "build:all": "bun run scripts/build-all.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
