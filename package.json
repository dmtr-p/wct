{
	"name": "wct",
	"version": "0.1.0",
	"description": "Git worktree workflow automation CLI",
	"module": "src/index.ts",
	"type": "module",
	"bin": {
		"wct": "src/index.ts"
	},
	"scripts": {
		"start": "bun run src/index.ts",
		"test": "bun test",
		"lint": "bunx biome check",
		"format": "bunx biome check --write",
		"build": "bun build src/index.ts --compile --outfile dist/wct",
		"build:all": "bun run scripts/build-all.ts"
	},
	"private": true,
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
